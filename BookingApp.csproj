  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Images\add.png" />
    <None Remove="Resources\Images\delete.png" />
    <None Remove="Resources\Images\edit.png" />
    <None Remove="Resources\Images\view.png" />
    <None Remove="View\TouristWindows\hamburger.png" />
    <None Remove="View\TouristWindows\logout.png" />
    <None Remove="View\TouristWindows\minus.png" />
    <None Remove="View\TouristWindows\notification.png" />
