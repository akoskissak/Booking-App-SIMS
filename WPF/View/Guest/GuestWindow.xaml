    <Grid>
       

        <Viewbox Stretch="Uniform">
            <Grid Margin="10,0,0,0">
                <Button x:Name ="backButton" Content="{ns:Loc Back}" Style="{DynamicResource ButtonStyleN}" Width="100" Height="50" Margin="-2,51,1822,931" Command="{Binding BackCommand}"/>
                <Image Source="{DynamicResource BackgroundDrawing}" Margin="-786,124,786,-17"/>
                <Image Source="{DynamicResource BackgroundDrawing2}" Margin="1144,734,-454,-39" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90.351"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <!--<Rectangle HorizontalAlignment="Left" Height="50" Stroke="Black" VerticalAlignment="Top" Width="1929" Fill="{DynamicResource AccentColorN}" Margin="-9,0,0,0"/>-->
                <Border Height="50" BorderBrush="{DynamicResource AccentColorN}" BorderThickness="2" Background="{DynamicResource AccentColorN}" Margin="-10,-9,0,991">
                    <Grid>
                        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">

                            <Button x:Name="HomeButton" Content="{ns:Loc Home}" Width="150" Style="{DynamicResource ButtonStyleN}" Click="HomeClick"/>
                            <Button Content="{ns:Loc Profile}" Width="150" Style="{DynamicResource ButtonStyleN}" Click="ProfileClick"/>
                            <Button Content="{ns:Loc Accommodations}" Width="280" Style="{DynamicResource ButtonStyleN}" Click="AccommodationsClick"/>
                            <Button Content="{ns:Loc Forums}" Width="150" Style="{DynamicResource ButtonStyleN}" Click="ForumsClick"/>
                            <Button Content="{ns:Loc About}" Width="150" Style="{DynamicResource ButtonStyleN}" Click="AboutClick"/>
                            <Button Content="{ns:Loc Help}" Width="150" Style="{DynamicResource ButtonStyleN}" Click="HelpClick"/>

                        </StackPanel>
                        <Button Content="{ns:Loc LanguageBtn}" Style="{DynamicResource ButtonStyleN}" HorizontalAlignment="Left" Margin="1538,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.587,-0.105" Command ="{Binding SwitchLanguageCommand}"/>
                        <Button Content="Log out" Style="{DynamicResource ButtonStyleN}" HorizontalAlignment="Left" Margin="1813,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.587,-0.105" Click="LogOut_Click"/>
                        <ToggleButton x:Name="themeButton" FontSize="20" Checked="ThemeToggleButton_Checked" Unchecked="ThemeToggleButton_Unchecked" Height="45" Background="{DynamicResource AccentColorN}" Margin="1627,1,221,0">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Image Height="35" Source="{DynamicResource moon}" />
                                        </Setter.Value>
                                    </Setter>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- Change background color on mouse over -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverColorN}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Image Source="{DynamicResource sun}" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                       
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                        <ToggleButton x:Name="notificationsButton" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Width="45" Height="45" Background="{DynamicResource AccentColorN}" Margin="1733,-1,147,2">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Image Height="35" Source="{DynamicResource Bell}" />
                                        </Setter.Value>
                                    </Setter>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- Change background color on mouse over -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverColorN}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                   
                                </Style>
                                </ToggleButton.Style>
                        </ToggleButton>
                    </Grid>

                </Border>

                <Frame x:Name="Main" Height="990" Width="1920" Margin="0,59,0,-17" NavigationUIVisibility="Hidden"/>
