    <Grid>
        <Border BorderBrush="{StaticResource AccentColorN}" BorderThickness="2" CornerRadius="30"  Background="{DynamicResource BorderBackground}" Width="980" Height="103">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Image Source="{DynamicResource Comment}" Height="20" Margin="57,40,859,2" Grid.Row="1"/>

                <Image  VerticalAlignment="Top" HorizontalAlignment="Left" Height="26" Margin="206,42,0,0" Width="24" Grid.Row="1">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="{x:Null}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsVeryUseful}" Value="True">
                                    <Setter Property="Source" Value="{DynamicResource UsefulIcon}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsVeryUseful}" Value="False">
                                    <Setter Property="Source" Value="{x:Null}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock Text="{ns:Loc VeryUseful}" Foreground="{DynamicResource TextColorN}" FontSize="20" FontStyle="Italic" Margin="236,41,550,-1" Grid.Row="1">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsVeryUseful}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>

                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>







                <TextBlock Style="{DynamicResource TextBlockHeaderStyleN}" FontSize="20" Text="{Binding NumOfComments}" Margin="102,45,814,0" Grid.Row="1"></TextBlock>
                <Image  Margin="10,6,906,42" Grid.Row="1">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="{x:Null}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsClosed}" Value="True">
                                    <Setter Property="Source" Value="{DynamicResource Closed}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsClosed}" Value="False">
                                    <Setter Property="Source" Value="{x:Null}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <TextBlock Style="{DynamicResource TextBlockHeaderStyleN}" Margin="56,7,396,-44" Grid.RowSpan="2" FontSize="22" FontWeight="Bold">
<Run Text="{ns:Loc Location}"/><Run Text=": "/><Run Text="{Binding City}"/>
<Run Text=", "/><Run Text="{Binding Country}"/>
                    <!--<TextBlock.Text>
                        <MultiBinding StringFormat="{}Location: {0}, {1}">
                            <Binding Path="City"/>
                            <Binding Path="Country"/>

                        </MultiBinding>
                    </TextBlock.Text>-->
                </TextBlock>

                <TextBlock Text="{Binding CommentNumber}" Margin="10,27,868,-82" FontSize="16" Grid.Row="1"/>

            </Grid>

        </Border>
    </Grid>
