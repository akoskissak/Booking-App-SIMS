                <DrawingGroup.ClipGeometry>
                    <RectangleGeometry Rect="0.0,0.0,93.936,93.936"/>
                </DrawingGroup.ClipGeometry>
                <DrawingGroup>
                    <GeometryDrawing Brush="{StaticResource AccentColorN}">
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M 80.179 13.758 c -18.342 -18.342 -48.08 -18.342 -66.422 0 c -18.342 18.341 -18.342 48.08 0 66.421 c 18.342 18.342 48.08 18.342 66.422 0 C 98.521 61.837 98.521 32.099 80.179 13.758 z M 44.144 83.117 c -4.057 0 -7.001 -3.071 -7.001 -7.305 c 0 -4.291 2.987 -7.404 7.102 -7.404 c 4.123 0 7.001 3.044 7.001 7.404 C 51.246 80.113 48.326 83.117 44.144 83.117 z M 54.73 44.921 c -4.15 4.905 -5.796 9.117 -5.503 14.088 l 0.097 2.495 c 0.011 0.062 0.017 0.125 0.017 0.188 c 0 0.58 -0.47 1.051 -1.05 1.051 c -0.004 -0.001 -0.008 -0.001 -0.012 0 h -7.867 c -0.549 0 -1.005 -0.423 -1.047 -0.97 l -0.202 -2.623 c -0.676 -6.082 1.508 -12.218 6.494 -18.202 c 4.319 -5.087 6.816 -8.865 6.816 -13.145 c 0 -4.829 -3.036 -7.536 -8.548 -7.624 c -3.403 0 -7.242 1.171 -9.534 2.913 c -0.264 0.201 -0.607 0.264 -0.925 0.173 s -0.575 -0.327 -0.693 -0.636 l -2.42 -6.354 c -0.169 -0.442 -0.02 -0.943 0.364 -1.224 c 3.538 -2.573 9.441 -4.235 15.041 -4.235 c 12.36 0 17.894 7.975 17.894 15.877 C 63.652 33.765 59.785 38.919 54.73 44.921 z" FillRule="Nonzero"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingGroup>
            <DrawingImage Drawing="{StaticResource question_mark_in_a_circle_svgrepo_com_xaml}" x:Key="HintIcon"/>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>
        <Grid>


            <Border Width="526" Height="793" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="White" CornerRadius="15" Margin="10,0,549,5">
                <Grid>
                    <TextBlock TextWrapping="Wrap" FontSize="25" TextAlignment="Center" Margin="24,28,24,605">Welcome to the accommodation rating page. To create a review, fill the cleanliness and correctness rate fields, as well as the comment field.</TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="23" TextAlignment="Center" FontWeight="Bold" Margin="1,184,-1,532">Optional: You can leave your accommodation pictures and reccommend renovation.</TextBlock>
                    <Label Content="Accommodation" FontSize="28" Style="{StaticResource HeaderStyleN}" Margin="136,434,-136,312"/>
                    <Label Content="Host" FontSize="28" Style="{StaticResource HeaderStyleN}" Margin="218,648,218,98"/>
                    <Border Width="500" Height="80" Margin="10,691,12,18" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="White" CornerRadius="15">
                        <Label Content="{Binding SelectedReservation.HostUsername}" FontSize="25" Style="{StaticResource HeaderStyleN}" Margin="59,-2,63,2"/>
                    </Border>
                    
                    <ToggleButton Height="50" Background="White" BorderBrush="White" Margin="131,272,129,467" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource HintIcon}" Height="25" Width="25"/>
                            <Label x:Name="HintLabel" Content="Problem with creating a review" FontSize="16" Foreground="Blue" FontStyle="Italic"/>
                        </StackPanel>
                        
                    </ToggleButton>
                    <TextBlock x:Name="Hint" FontSize="16" Foreground="Green" Height="150" TextAlignment="Center" TextWrapping="Wrap" Margin="116,320,118,319">
    Please enter rates for cleanliness and correctness. To recommend a renovation, you need to enter all mandatory values and then click on the "Recommend renovation" button."
                    </TextBlock>

                    <controls:AccommodationCardSmaller DataContext="{Binding SelectedAccommodation}" Width="500" Margin="12,168,10,-168"></controls:AccommodationCardSmaller>
                </Grid>
            </Border>
            <Border Width="526" Height="517" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="White" CornerRadius="15" Margin="549,1,10,280">

                <Grid>
                    <Label Content="Cleanliness:" FontSize="20" HorizontalAlignment="Left" Margin="88,33,0,0" VerticalAlignment="Top"/>
                    <Label Content="Correctness:" FontSize="20" HorizontalAlignment="Left" Margin="310,33,0,0" VerticalAlignment="Top"/>

                    <ComboBox HorizontalAlignment="Left" Margin="88,72,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Tag" SelectedValue="{Binding AccommodationRate.Cleanliness, Mode=TwoWay}">

                        <ComboBoxItem Content="5" Tag="5"></ComboBoxItem>
                        <ComboBoxItem Content="4" Tag="4"></ComboBoxItem>
                        <ComboBoxItem Content="3" Tag="3"></ComboBoxItem>
                        <ComboBoxItem Content="2" Tag="2"></ComboBoxItem>
                        <ComboBoxItem Content="1" Tag="1"></ComboBoxItem>
                    </ComboBox>

                    <ComboBox HorizontalAlignment="Left" Margin="308,70,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Tag" SelectedValue="{Binding AccommodationRate.Correctness, Mode=TwoWay}">

                        <ComboBoxItem Content="5" Tag="5"></ComboBoxItem>
                        <ComboBoxItem Content="4" Tag="4"></ComboBoxItem>
                        <ComboBoxItem Content="3" Tag="3"></ComboBoxItem>
                        <ComboBoxItem Content="2" Tag="2"></ComboBoxItem>
                        <ComboBoxItem Content="1" Tag="1"></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Comment:" FontSize="20" HorizontalAlignment="Left" Margin="55,115,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding AccommodationRate.AdditionalComment, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="412" Height="100" Margin="0,152,0,0"/>

                    <Button FontSize="15" Command="{Binding AddPicturesCommand}" Content="Add picture" HorizontalAlignment="Left" Margin="55,261,0,0" VerticalAlignment="Top" Height="31" Width="121" Style="{StaticResource ButtonStyleN}"/>
                    <Button FontSize="15" Content="Recommend renovation" HorizontalAlignment="Left" Margin="55,375,0,0" VerticalAlignment="Top" Style="{StaticResource ButtonStyleN}" Height="29" Width="208" Command="{Binding RecommendCommand}"/>
                    <Button FontSize="15" Content="Save" HorizontalAlignment="Left" Margin="369,456,0,0" VerticalAlignment="Top" Height="30" Width="121" Style="{StaticResource ButtonStyleN}" Command="{Binding SaveRateCommand}"/>
                    <ListBox x:Name="pictureListBox" Margin="186,261,55,157" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Images}"/>

                </Grid>
            </Border>


        </Grid>
    </Grid>

</Page>
