            </DrawingGroup>
            <DrawingImage Drawing="{DynamicResource exclamation_mark_svgrepo_com_xaml}" x:Key="Warning"/>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>
        <Grid>


            <Border Width="526" Height="793" BorderThickness="2" BorderBrush="{DynamicResource AccentColorN}" Background="White" CornerRadius="15" Margin="10,0,549,5">
                <Grid>
                    <Button Content="Back" Style="{DynamicResource ButtonStyleN}" FontSize="16" Width="60" Height="25" Margin="10,3,452,761" Command="{Binding BackCommand}"/>

                    <TextBlock TextWrapping="Wrap" FontSize="25" TextAlignment="Center" Margin="24,28,24,605">Welcome to the accommodation rating page. To create a review, fill the cleanliness and correctness rate fields, as well as the comment field.</TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="23" TextAlignment="Center" FontWeight="Bold" Margin="1,184,-1,532">Optional: You can leave your accommodation pictures and reccommend renovation.</TextBlock>
                    <Label Content="Accommodation" FontSize="28" Style="{DynamicResource HeaderStyleN}" Margin="136,434,-136,312"/>
                    <Label Content="Host" FontSize="28" Style="{DynamicResource HeaderStyleN}" Margin="218,648,218,98"/>
                    <Border Width="500" Height="80" Margin="10,691,12,18" BorderThickness="2" BorderBrush="{DynamicResource AccentColorN}" Background="White" CornerRadius="15">
                        <Label Content="{Binding SelectedReservation.HostUsername}" FontSize="25" Style="{DynamicResource HeaderStyleN}" Margin="59,-2,63,2"/>
                    </Border>

                    <ToggleButton Height="50" Background="White" BorderBrush="White" Margin="131,272,129,467" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource HintIcon}" Height="25" Width="25"/>
                            <Label x:Name="HintLabel" Content="Problem with creating a review" FontSize="16" Foreground="Blue" FontStyle="Italic"/>
                        </StackPanel>

                    </ToggleButton>
                    <TextBlock x:Name="Hint" FontSize="16" Foreground="Green" Height="150" TextAlignment="Center" TextWrapping="Wrap" Margin="116,320,118,319">
    Please enter rates for cleanliness and correctness. To recommend a renovation, you need to enter all mandatory values and then click on the "Recommend renovation" button."
                    </TextBlock>

                    <controls:AccommodationCardSmaller DataContext="{Binding SelectedAccommodation}" Width="500" Margin="12,168,10,-168"></controls:AccommodationCardSmaller>
                </Grid>
            </Border>
            <Border Width="526" Height="517" BorderThickness="2" BorderBrush="{DynamicResource AccentColorN}" Background="White" CornerRadius="15" Margin="549,1,10,280">

                <Grid>
                    <Label Content="Cleanliness:" FontSize="20" HorizontalAlignment="Left" Margin="88,33,0,0" VerticalAlignment="Top"/>
                    <Label Content="Correctness:" FontSize="20" HorizontalAlignment="Left" Margin="310,33,0,0" VerticalAlignment="Top"/>

                    <ComboBox HorizontalAlignment="Left" Margin="88,72,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Tag" SelectedValue="{Binding Cleanliness, Mode=TwoWay}">

                        <ComboBoxItem Content="5" Tag="5"></ComboBoxItem>
                        <ComboBoxItem Content="4" Tag="4"></ComboBoxItem>
                        <ComboBoxItem Content="3" Tag="3"></ComboBoxItem>
                        <ComboBoxItem Content="2" Tag="2"></ComboBoxItem>
                        <ComboBoxItem Content="1" Tag="1"></ComboBoxItem>
                    </ComboBox>

                    <ComboBox HorizontalAlignment="Left" Margin="308,70,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Tag" SelectedValue="{Binding Correctness, Mode=TwoWay}">

                        <ComboBoxItem Content="5" Tag="5"></ComboBoxItem>
                        <ComboBoxItem Content="4" Tag="4"></ComboBoxItem>
                        <ComboBoxItem Content="3" Tag="3"></ComboBoxItem>
                        <ComboBoxItem Content="2" Tag="2"></ComboBoxItem>
                        <ComboBoxItem Content="1" Tag="1"></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Comment:" FontSize="20" HorizontalAlignment="Left" Margin="55,115,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="412" Height="100" Margin="0,152,0,0"/>

                    <Button FontSize="15" Command="{Binding AddPicturesCommand}" Content="Add picture" HorizontalAlignment="Left" Margin="55,284,0,0" VerticalAlignment="Top" Height="31" Width="121" Style="{DynamicResource ButtonStyleN}"/>
                    <Button FontSize="15" Content="Recommend renovation" HorizontalAlignment="Left" Margin="55,387,0,0" VerticalAlignment="Top" Style="{DynamicResource ButtonStyleN}" Height="29" Width="208" Command="{Binding RecommendCommand}"/>
                    <Button FontSize="15" Content="Save" HorizontalAlignment="Left" Margin="369,456,0,0" VerticalAlignment="Top" Height="30" Width="121" Style="{DynamicResource ButtonStyleN}" Command="{Binding SaveRateCommand}"/>
                    <ListBox x:Name="pictureListBox" Margin="186,283,55,135" ScrollViewer.VerticalScrollBarVisibility="Auto"  ItemsSource="{Binding Images, UpdateSourceTrigger=PropertyChanged}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image Source="{Binding }" Width="65" Height="65" Margin="0, 0, 7, 0"/>
                                    <Button Content="X" Width="20" Height="20" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Style="{DynamicResource ButtonStyleN}"
        Command="{Binding DataContext.XCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
        CommandParameter="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                    <TextBlock x:Name="commentValidator" FontSize="12" Foreground="red" Margin="55,252,55,240">

                        <TextBlock.Inlines>
                            <InlineUIContainer>
                                <Image Source="{DynamicResource Warning}" Width="16" Height="12" Margin="2,0,0,0"/>
                            </InlineUIContainer>
                            <Run Text="Comment field can't be empty."/>

                        </TextBlock.Inlines>

                    </TextBlock>
                    <TextBlock x:Name="cleanlinessValidator" FontSize="12" Foreground="red" Margin="65,94,262,398">

                        <TextBlock.Inlines>
                            <InlineUIContainer>
                                <Image Source="{DynamicResource Warning}" Width="16" Height="12" Margin="2,0,0,0"/>
                            </InlineUIContainer>
                            <Run Text="Cleanliness field can't be empty."/>

                        </TextBlock.Inlines>

                    </TextBlock>

                    <TextBlock x:Name="correctnessValidator" FontSize="12" Foreground="red" Margin="282,94,41,398">

                        <TextBlock.Inlines>
                            <InlineUIContainer>
                                <Image Source="{DynamicResource Warning}" Width="16" Height="12" Margin="2,0,0,0"/>
                            </InlineUIContainer>
                            <Run Text="Correctness field can't be empty."/>

                        </TextBlock.Inlines>

                    </TextBlock>

                </Grid>
            </Border>


        </Grid>
    </Grid>

</Page>
