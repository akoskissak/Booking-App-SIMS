    <Grid>
        <Grid Background="{DynamicResource BorderBackground}">


            <Border Width="526" Height="793" BorderThickness="2" BorderBrush="{DynamicResource AccentColorN}" Background="{DynamicResource BorderBackground}" CornerRadius="15" Margin="10,0,549,5">
                <Grid>
                    <TextBlock Style="{DynamicResource TextBlockStyleN}" Text="{ns:Loc PleaseChooseDelay}" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" Margin="36,41,38,507"></TextBlock>

                    <ToggleButton Height="50" Background="{DynamicResource BorderBackground}" BorderBrush="{DynamicResource BorderBackground}" Margin="129,232,131,507" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource HintIcon}" Height="25" Width="25"/>
                            <Label x:Name="HintLabel" Content="{ns:Loc DatesProblem}" FontSize="16" Foreground="{DynamicResource HintColorN}" FontStyle="Italic"/>
                        </StackPanel>

                    </ToggleButton>
                    <TextBlock x:Name="Hint" FontSize="16" Foreground="{DynamicResource HintTextColor}" Height="150" TextAlignment="Center" TextWrapping="Wrap" Margin="129,287,105,352">
                        </TextBlock>

                    <Label Content="{ns:Loc Accommodation}" FontSize="28" Style="{DynamicResource HeaderStyleN}" Margin="136,434,-136,312"/>
                    <Label Content="{ns:Loc Host}" FontSize="28" Style="{DynamicResource HeaderStyleN}" Margin="218,648,218,98"/>
                    <Border Width="500" Height="80" Margin="10,691,12,18" BorderThickness="2" BorderBrush="{DynamicResource AccentColorN}" Background="{DynamicResource BorderBackground}" CornerRadius="15">
                        <Label Content="{Binding SelectedReservation.HostUsername}" FontSize="25" Style="{DynamicResource HeaderStyleN}" Margin="8,2,114,-2"/>
                    </Border>

                    <controls:AccommodationCardSmaller DataContext="{Binding SelectedAccommodation}" Width="500" Margin="11,168,11,-168"></controls:AccommodationCardSmaller>

                </Grid>

            </Border>
            <Border Width="526" BorderThickness="2" BorderBrush="{DynamicResource AccentColorN}" Background="{DynamicResource BorderBackground}" CornerRadius="15" Margin="549,1,10,0">

                <Grid>
                    <Calendar CalendarItemStyle="{DynamicResource CalendarCalendarItemStyleN}" CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyleN}"  Style="{DynamicResource CalendarStyleN}" x:Name="ReservationCalendar"  BorderBrush="{DynamicResource AccentColorN}" BorderThickness="2" SelectedDatesChanged="Calendar_SelectedDatesChanged"  Background="White" SelectionMode="SingleRange" Height="371" Margin="65,180,65,242" RenderTransformOrigin="0.515,0.5">
                        <Calendar.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </Calendar.LayoutTransform>

                    </Calendar>
                    <TextBlock x:Name="dayNumberValidator" FontSize="20" Foreground="red" Margin="133,530,133,221">


                        <TextBlock.Inlines>
                            <InlineUIContainer>
                                <Image Source="{DynamicResource Warning}" Width="16" Height="16" Margin="2,0,0,0"/>
                            </InlineUIContainer>
                            <Run Text="{ns:Loc DateRangeValid}"/>
                            <Run Text="{Binding DayNumber}" />

                            <Run Text="{ns:Loc Days}" />
                        </TextBlock.Inlines>



                    </TextBlock>
                    <Button x:Name="reserveButton" Content="{ns:Loc SelectDates}" HorizontalAlignment="Center" Margin="0,625,0,0" VerticalAlignment="Top" Command="{Binding SelectDatesCommand}" Width="198" Height="55" Style="{DynamicResource ResourceKey=ButtonStyleN}" RenderTransformOrigin="0.505,0.945"/>
                </Grid>
            </Border>


        </Grid>
    </Grid>
</Page>
