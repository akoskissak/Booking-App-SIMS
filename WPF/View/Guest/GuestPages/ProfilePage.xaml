<Page x:Class="BookingApp.View.GuestPages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.GuestPages"
      xmlns:controls="clr-namespace:BookingApp.View.GuestControls"
      xmlns:ns="clr-namespace:BookingApp"
       xmlns:Menu="clr-namespace:BookingApp.Utilities"
      mc:Ignorable="d" 
      d:DesignHeight="990" d:DesignWidth="1920"
      Title="ProfilePage">

    <Grid>
        <Border Width="396" Height="793" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="{DynamicResource BorderBackground}" CornerRadius="15" Margin="268,98,1256,98">
            <Grid>
                <Menu:Btn   x:Name="ProfileButton"
                     Style="{DynamicResource MenuBtnStyleN}"
                     FontSize="37"
                    Foreground="{DynamicResource TextColorN}"
                     Click="Profile_Click"
                     IsChecked="True" Margin="0,31,0,675">
                    <TextBlock Text="{ns:Loc Profile}"
                         VerticalAlignment="Center"
                         Margin="20,0,0,0"/>
                </Menu:Btn>
                <Menu:Btn   x:Name="RateAccommodationButton"
      Style="{DynamicResource MenuBtnStyleN}"
      FontSize="37"
     Foreground="{DynamicResource TextColorN}"
      Click="RateAccommodation_Click"
      Margin="0,-236,0,236">
                    <TextBlock Text="{ns:Loc RateAccommodation}"
          VerticalAlignment="Center"
          Margin="20,0,0,0"/>
                </Menu:Btn>
                <Menu:Btn   x:Name="HostRatesButton"
Style="{DynamicResource MenuBtnStyleN}"
FontSize="37"
Foreground="{DynamicResource TextColorN}"
Click="RatesByHost_Click"
Margin="0,-146,0,146">
                    <TextBlock Text="{ns:Loc RatesByHost}"
    VerticalAlignment="Center"
    Margin="20,0,0,0"/>
                </Menu:Btn>
                <Menu:Btn   x:Name="RequestsButton"
Style="{DynamicResource MenuBtnStyleN}"
FontSize="37"
Foreground="{DynamicResource TextColorN}"
Click="Requests_Click"
Margin="0,41,0,157">
                    <TextBlock Text="{ns:Loc Requests}"
    VerticalAlignment="Center"
    Margin="20,0,0,0"/>
                </Menu:Btn>

                <Menu:Btn   x:Name="ForumsButton"
Style="{DynamicResource MenuBtnStyleN}"
FontSize="37"
Foreground="{DynamicResource TextColorN}"
Click="Forums_Click"
Margin="0,31,0,-31">
                    <TextBlock Text="{ns:Loc Forums}"
    VerticalAlignment="Center"
    Margin="20,0,0,0"/>
                </Menu:Btn>
                <Menu:Btn   x:Name="SettingsButton"
Style="{DynamicResource MenuBtnStyleN}"
FontSize="37"
Foreground="{DynamicResource TextColorN}"
Click="Settings_Click"
Margin="0,119,0,-119">
                    <TextBlock Text="{ns:Loc Settings}"
    VerticalAlignment="Center"
    Margin="20,0,0,0"/>
                </Menu:Btn>
