<Page x:Class="BookingApp.View.GuestPages.RatesByHostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.GuestPages"
      xmlns:controls="clr-namespace:BookingApp.View.GuestControls"
      mc:Ignorable="d" 
      d:DesignHeight="798" d:DesignWidth="1085"
      Title="RatesByHostPage">

    <Grid>
        <Border Width="1064" Height="793" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="White" CornerRadius="15" Margin="10,0,11,2">
            <Grid>
                <TextBlock TextWrapping="Wrap" FontSize="25" Margin="187,114,187,629">
On this page, you can see how you were rated by the hosts.</TextBlock>


                <ListBox Name="ReservationListBox" Margin="30,235,30,27"  ScrollViewer.VerticalScrollBarVisibility="Auto"
ItemsSource="{Binding GuestRates}" Background="{StaticResource BackgroundColorN}" SelectedItem="{Binding SelectedReservation}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <controls:GuestRateCard/>
                                <Button Content="Details" Click="Details_Click" Style="{StaticResource ButtonStyleN}" Width="100" Height="50" Margin="800, 0, 0, 0"/>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
                
            </Grid>
        </Border>

    </Grid>
</Page>
