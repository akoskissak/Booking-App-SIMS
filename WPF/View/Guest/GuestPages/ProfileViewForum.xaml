<Page x:Class="BookingApp.WPF.View.Guest.GuestPages.ProfileViewForum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.Guest.GuestPages"
      mc:Ignorable="d" 
            
      d:DesignHeight="798" d:DesignWidth="1085"
      Title="RateAccommodationPage">


    <Grid>

        <Border Width="1064" Height="793" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="White" CornerRadius="15" Margin="11,3,10,2">
            <Grid>
                <TextBlock  FontSize="40" FontWeight="Bold" Foreground="{StaticResource AccentColorN}" Margin="314,0,314,732">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Location: {0}, {1}">
                            <Binding Path="City"/>
                            <Binding Path="Country"/>

                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border BorderBrush="{StaticResource AccentColorN}" Background="{StaticResource AccentColorN}" BorderThickness="2" Margin="204,62,204,570" CornerRadius="30">
                    <Grid>
                        <TextBlock Text="{Binding Username}" Margin="30,15,530,140" FontSize="20" Foreground="AliceBlue" FontWeight="Bold"></TextBlock>
                        <TextBlock Text="{Binding UserType}" FontSize="20" Foreground="AliceBlue" Margin="30,36,548,118"></TextBlock>

                        <Border BorderBrush="{StaticResource AccentColorN}" BorderThickness="2" Margin="123,15,14,15" CornerRadius="30" Background="White">
                            <Grid>
                                <TextBlock Text="{Binding SelectedForum.FirstComment}" FontSize="20" Margin="28,10,10,10" TextWrapping="Wrap"></TextBlock>
                            </Grid>
                        </Border>
                    </Grid>

                </Border>

                <Border BorderBrush="{StaticResource AccentColorN}" BorderThickness="2" Margin="204,238,204,359" CornerRadius="30">
                    <Grid>
                        <TextBox Text="{Binding NewComment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="30,18,34,44" TextWrapping="Wrap">

                        </TextBox>
                        <Button Content="Post comment" Style="{StaticResource ButtonStyleN}" FontSize="16" Width="130" Height="30" Margin="484,148,34,4"/>

                    </Grid>

                </Border>

                <ListBox ItemsSource="{Binding Comments}" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="204,446,204,10"/>



            </Grid>


        </Border>


    </Grid>

</Page>
