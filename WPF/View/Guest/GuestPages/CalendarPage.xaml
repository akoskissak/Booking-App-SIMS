    <Grid>
        <Button Content="Back" Style="{DynamicResource ButtonStyleN}" Width="100" Height="50" Margin="80,92,1740,848" Command="{Binding BackCommand}"/>

        <Border BorderBrush="{DynamicResource AccentColorN}" Background="White" BorderThickness="2" CornerRadius="40, 40, 40, 40" Margin="218,92,1031,162" Width="671" Height="736">
            <Grid>
                <Label Content="{ns:Loc Reservation}" FontSize="55" Margin="158,16,-24,315" Style="{DynamicResource ResourceKey=HeaderStyleN}"/>
                <TextBlock Text="{ns:Loc PleaseChoose}" FontSize="35" TextWrapping="Wrap" TextAlignment="Center" Margin="31,101,31,315"></TextBlock>

                <ToggleButton Height="50" Width="300" Background="White" BorderBrush="White" Margin="168,260,199,430" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource HintIcon}" Height="25" Width="25"/>
                        <Label x:Name="HintLabel" FontSize="16" Foreground="Blue" FontStyle="Italic"/>
                    </StackPanel>


                </ToggleButton>
                <TextBlock x:Name="Hint" FontSize="16" Foreground="Green" Height="150" Width="400" TextAlignment="Center" TextWrapping="Wrap" Margin="140,310,127,280">

                </TextBlock>
                <Label Content="{ns:Loc Accommodation}" FontSize="40" Margin="168,470,-34,-75" Style="{DynamicResource ResourceKey=HeaderStyleN}"/>
                <controls:AccommodationCardSmall DataContext="{Binding SelectedAccommodation}" Margin="6,258,-6,-258"/>
            </Grid>
        </Border>
        <Border BorderBrush="{DynamicResource AccentColorN}" Background="White" BorderThickness="2" CornerRadius="40, 40, 40, 40" Margin="981,92,268,339" Width="671" Height="559">
            <Grid x:Name="CalendarSection">
                <Calendar x:Name="ReservationCalendar"  BorderBrush="{DynamicResource AccentColorN}" BorderThickness="2" SelectedDatesChanged="Calendar_SelectedDatesChanged"  Background="White" SelectionMode="SingleRange" Height="371" Margin="65,51,65,133" RenderTransformOrigin="0.515,0.5">
                    <Calendar.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2"/>
                    </Calendar.LayoutTransform>

                </Calendar>
                <TextBlock x:Name="dayNumberValidator" FontSize="20" Foreground="red" Margin="194,396,195,107">


                    <TextBlock.Inlines>
                        <InlineUIContainer>
                            <Image Source="{DynamicResource Warning}" Width="16" Height="16" Margin="2,0,0,0"/>
                        </InlineUIContainer>
                        <Run Text="{ns:Loc DateRangeValid}"/>
                        <Run Text="{Binding DayNumber}" />

                        <Run Text="{ns:Loc Days}" />
                    </TextBlock.Inlines>



                </TextBlock>

                <Button x:Name="reserveButton" Content="{ns:Loc SelectDates}" HorizontalAlignment="Center" Margin="0,457,0,0" VerticalAlignment="Top" Command="{Binding SelectDatesCommand}" Width="198" Height="55" Style="{DynamicResource ResourceKey=ButtonStyleN}"/>

            </Grid>
        </Border>
        <Border BorderBrush="{DynamicResource AccentColorN}" Background="White" BorderThickness="2" CornerRadius="30, 30, 30, 30" Margin="981,665,268,162" Width="671" Height="163">
            <Grid x:Name="PeopleNumberSection">
                <Label Content="{ns:Loc GuestNumber}" HorizontalAlignment="Left" Margin="148,22,0,0" VerticalAlignment="Top" Height="52" Width="264" FontSize="30"/>
                <!--<TextBox x:Name="txtGuestNumber" HorizontalAlignment="Left" Margin="439,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" Height="40"/>-->
                <xctk:IntegerUpDown Name="txtGuestNumber" Margin="457,25,55,88" Text="{Binding GuestNumber}" />
                <Button x:Name="finishReservation" Content="{ns:Loc Reserve}" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Width="140" FontSize="25" Command="{Binding FinishReservationCommand}" Height="50" Style="{DynamicResource ResourceKey=ButtonStyleN}"/>
                <Button Content="Back" FontSize="23" Style="{DynamicResource ButtonStyleN}" Width="80" Height="40" Margin="10,17,557,92" Command="{Binding BackToCalendarCommand}"/>
                <TextBlock x:Name="guestNumberValidator" FontSize="16" Foreground="red" Margin="439,74,10,37">


                    <TextBlock.Inlines>
                        <InlineUIContainer>
                            <Image Source="{DynamicResource Warning}" Width="16" Height="12" Margin="2,0,0,0"/>
                        </InlineUIContainer>
                        <Run Text="{ns:Loc GuestNumValid}"/>
                        <Run Text="{Binding SelectedAccommodation.MaxGuestNumber}" />

                        <Run Text="." />
                    </TextBlock.Inlines>



                </TextBlock>

            </Grid>
        </Border>


    </Grid>
</Page>

