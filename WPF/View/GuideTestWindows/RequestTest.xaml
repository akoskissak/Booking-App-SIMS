<Window x:Class="BookingApp.WPF.View.GuideTestWindows.RequestTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Requests test" Width="800" Height="600">
    <DataGrid ItemsSource="{Binding tourRequestViewModels}" AutoGenerateColumns="False" Margin="15">
        <DataGrid.Columns>
            <DataGridTextColumn Header="City" Binding="{Binding City}" />
            <DataGridTextColumn Header="Country" Binding="{Binding Country}" />
            <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
            <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
            <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            <DataGridTextColumn Header="Language" Binding="{Binding Language}" />
            <DataGridTextColumn Header="Participant IDs" Binding="{Binding ParticipantIds}" />
            <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" />
            <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" />
            <DataGridTextColumn Header="Accepted Date" Binding="{Binding AcceptedDate}" />
            <DataGridTextColumn Header="Guide Id" Binding="{Binding GuideId}" />
            <DataGridTextColumn Header="Date Requested" Binding="{Binding DateRequested}" />
        </DataGrid.Columns>
    </DataGrid>


</Window>
