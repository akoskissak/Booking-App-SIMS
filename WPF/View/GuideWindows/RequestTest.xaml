<Window x:Class="BookingApp.WPF.View.GuideWindows.RequestTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Requests test" Width="800" Height="600">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>        
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- First Row -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                <Label Content="City:"/>
                <TextBox Width="250" Text="{Binding SearchCriteria.City, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Second Row -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                <Label Content="Country:"/>
                <TextBox Width="250" Text="{Binding SearchCriteria.Country, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Third Row -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                <Label Content="Language:"/>
                <TextBox Width="250" Text="{Binding SearchCriteria.Language, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Fourth Row -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                <Label Content="Tourists Number:"/>
                <TextBox Width="250" />
            </StackPanel>

            <!-- First Row, Second Column -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                <Label Content="Start date:"/>
                <xctk:DateTimePicker Width="250" Name="dateTimePickerStart" Value="{Binding SearchCriteria.StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Second Row, Second Column -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <Label Content="End date:"/>
                <xctk:DateTimePicker Width="250" Name="dateTimePickerEnd" Value="{Binding SearchCriteria.EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Third Row, Second Column -->
            <Button Content="Clear search boxes" Grid.Row="3" Grid.Column="0" Margin="5" Click="Testic"/>

            <!-- Fourth Row, Second Column -->
            <Button Content="Filter requests" Grid.Row="3" Grid.Column="1" Margin="5"/>
        </Grid>


        <DataGrid Grid.Row="1" ItemsSource="{Binding tourRequestViewModels}" AutoGenerateColumns="False" Margin="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="City" Binding="{Binding City}" />
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" />
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Language" Binding="{Binding Language}" />
                <DataGridTextColumn Header="Participant IDs" Binding="{Binding ParticipantIds}" />
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" />
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" />
                <DataGridTextColumn Header="Accepted Date" Binding="{Binding AcceptedDate}" />
                <DataGridTextColumn Header="Guide Id" Binding="{Binding GuideId}" />
                <DataGridTextColumn Header="Date Requested" Binding="{Binding DateRequested}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
    
    
    
    
    <!--
     -->


</Window>
