        <Button Content="Reserve" HorizontalAlignment="Left" Margin="645,668,0,0" VerticalAlignment="Top" Width="152" Height="66" Style="{StaticResource ButtonStyleN}" Click="ReserveButton_Click"/>
        <Button Content="About" HorizontalAlignment="Left" Margin="850,668,0,0" VerticalAlignment="Top" Width="152" Height="66" Style="{StaticResource ButtonStyleN}" Click="AboutButton_Click"/>
        <Button Content="Help" HorizontalAlignment="Left" Margin="1052,668,0,0" VerticalAlignment="Top" Width="152" Height="66" Style="{StaticResource ButtonStyleN}" Click="HelpButton_Click"/>
    </Grid>
</Page>
