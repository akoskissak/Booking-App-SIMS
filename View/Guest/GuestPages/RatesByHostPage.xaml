<Page x:Class="BookingApp.View.GuestPages.RatesByHostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.GuestPages"
      xmlns:controls="clr-namespace:BookingApp.View.GuestControls"
      mc:Ignorable="d" 
      d:DesignHeight="798" d:DesignWidth="1085"
      Title="RatesByHostPage">

    <Grid>
        <Border Width="1064" Height="793" BorderThickness="2" BorderBrush="{StaticResource AccentColorN}" Background="White" CornerRadius="15" Margin="10,0,11,2">
            <Grid>

                <ListBox Name="ReservationListBox" Margin="61,160,61,160"  ScrollViewer.VerticalScrollBarVisibility="Auto"
ItemsSource="{Binding GuestRates}" Background="{StaticResource BackgroundColorN}" SelectedItem="{Binding SelectedReservation}">
                   
                </ListBox>
                
            </Grid>
        </Border>

    </Grid>
</Page>
