    </Window.Resources>

    <Grid>

        <Grid Margin="10,0,0,0">
            <Rectangle HorizontalAlignment="Left" Height="50" Stroke="Black" VerticalAlignment="Top" Width="1920" Fill="{StaticResource AccentColorN}" Margin="-9,0,0,0"/>

            <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">
                <Button x:Name="HomeButton" Content="Home" Width="150" Style="{StaticResource ButtonStyleN}" Click="HomeClick"/>
                <Button Content="Profile" Width="150" Style="{StaticResource ButtonStyleN}" Click="ProfileClick"/>
                <Button Content="Accommodations" Width="280" Style="{StaticResource ButtonStyleN}" Click="AccommodationsClick"/>
                <Button Content="Forums" Width="150" Style="{StaticResource ButtonStyleN}" Click="ForumsClick"/>
                <Button Content="About" Width="150" Style="{StaticResource ButtonStyleN}" Click="AboutClick"/>
                <Button Content="Help" Width="150" Style="{StaticResource ButtonStyleN}" Click="HelpClick"/>

            </StackPanel>
            <Frame x:Name="Main" Height="990" Width="1920" Margin="0,55,0,-21" NavigationUIVisibility="Hidden"/>
            <Frame x:Name="NotificationFrame" Margin="1565,55,-10,559" Height="450" Width="350" NavigationUIVisibility="Hidden"/>
            <!--<Button Content="Dark theme" HorizontalAlignment="Left" Margin="1215,5,0,0" VerticalAlignment="Top" Height="40" Width="108" FontSize="20" Click="DarkTheme_Click"/>-->
            <!--<Button Content="Light theme" HorizontalAlignment="Left" Margin="1362,5,0,0" VerticalAlignment="Top" Height="40" Width="108" FontSize="20" Click="LightTheme_Click"/>-->

        </Grid>
       

        <Button Content="Log out" Style="{StaticResource ButtonStyleN}" HorizontalAlignment="Left" Margin="1791,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.587,-0.105"/>
        <ToggleButton x:Name="notificationsButton" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Width="50" Height="50" Background="{StaticResource AccentColorN}" Margin="1500, -991, -85, 0">
            <ToggleButton.Content>
                <Image Source="{StaticResource Bell}" Height="35" Width="30"/>
            </ToggleButton.Content>
        </ToggleButton>
    </Grid>

</Window>
