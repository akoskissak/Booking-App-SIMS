<UserControl x:Class="BookingApp.View.GuestControls.ReservationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.View.GuestControls"
             mc:Ignorable="d" 
             d:DesignHeight="103" d:DesignWidth="679">
    <Grid>
        <Border BorderBrush="{StaticResource AccentColorN}" BorderThickness="1" CornerRadius="30"  Background="white" Width="679" Height="103">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="AccommodationName" FontSize="20" Text="{Binding Name}" Margin="50,0,482,-1" Grid.Row="1"/>
                <TextBlock x:Name="Location" FontSize="20" Text="{Binding Location}" Margin="360,0,110,0" Grid.Row="1"/>

                <TextBlock x:Name="ReservationDate" FontSize="20" Text="{Binding DateRangeString}" Margin="179,44,148,-44" Grid.Row="1"/>
              

            </Grid>

        </Border>
    </Grid>
</UserControl>
