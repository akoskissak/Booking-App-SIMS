<Window x:Class="BookingApp.View.GuideWindows.TouristListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tourists to be joined" Height="350" Width="388">
    <Grid Margin="0,0,0,0">
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="10,10,10,40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tourist Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="JoinedButton" Content="Tourists Joined" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="150" Click="JoinedButton_Click"/>
    </Grid>
</Window>
