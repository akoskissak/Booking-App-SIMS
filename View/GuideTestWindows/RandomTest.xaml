<Window x:Class="BookingApp.View.GuideTestWindows.RandomTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paper Plane Animation" Width="800" Height="600">
    <Grid>
        <Canvas Name="animationCanvas">
            <!-- Circle (Ellipse) to represent the "paper plane" -->
            <Ellipse Name="paperCircle" Fill="Blue" Width="20" Height="20"
                     Canvas.Left="0" Canvas.Top="0"/>
            <!-- Dashed line path (optional) -->
            <Path Name="dashedLinePath" Stroke="Black" StrokeDashArray="2 2"
                  StrokeDashCap="Round" StrokeThickness="2" Visibility="Hidden"/>
        </Canvas>
    </Grid>
</Window>
