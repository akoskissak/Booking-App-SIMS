<Window x:Class="BookingApp.View.TouristWindows.TouristWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.TouristWindows" xmlns:dto="clr-namespace:BookingApp.DTO" d:DataContext="{d:DesignInstance Type=dto:TourDTO}"
        mc:Ignorable="d"
        Title="TouristWindow" Height="720" Width="1280">
    <Window.Resources>
        <ControlTemplate x:Key="ValidationTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="textBox" />
                <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red" />
            </StackPanel>

        </ControlTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1" Grid.Row="5" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Tours:" Width="50" FontWeight="Bold" FontSize="14" />
            
            <Label Grid.Column="4" HorizontalAlignment="Left" Content="Search by:" Width="101" Grid.Row="0" FontWeight="Bold" FontSize="16" FontStyle="Italic" Grid.ColumnSpan="2" />
            
            <Label Grid.Column="5" HorizontalAlignment="Center" Content="Country:" Width="102" Grid.Row="1" FontSize="14" />
            <TextBox Grid.Column="6" Grid.Row="1" x:Name="CountrySearch" Width="150" Height="22" Margin="15,4,15,4"/>
            
            <Label Grid.Column="5" HorizontalAlignment="Center" Content="City:" Width="102" Grid.Row="2" FontSize="14" />
            <TextBox Grid.Column="6" Grid.Row="2" x:Name="CitySearch" Width="150" Height="22" Margin="15,4,15,4"/>
            
            <Label Grid.Column="5" HorizontalAlignment="Center" Content="Duration:" Width="102" Grid.Row="3" FontSize="14" />
            <TextBox Grid.Column="6" Grid.Row="3" x:Name="DurationSearch" Width="150" Height="22" Margin="15,4,15,4"/>
            <Label Grid.Column="6" HorizontalAlignment="Left" Content="h" Width="30" Grid.Row="3" FontSize="14" Grid.ColumnSpan="2" Margin="165,0,0,0" FontWeight="Bold" />
            
            <Label Grid.Column="5" HorizontalAlignment="Center" Content="Language:" Width="102" Grid.Row="4" FontSize="14" />
            <TextBox Grid.Column="6" Grid.Row="4" x:Name="LanguageSearch" Width="150" Height="22" Margin="15,4,15,4"/>
            
            <Label Grid.Column="5" HorizontalAlignment="Center" Content="Number of" Width="102" Grid.Row="5" FontSize="14" Grid.RowSpan="2" />
            <TextBox Grid.Column="6" Grid.Row="5" x:Name="PeopleSearch" Width="150" Height="22" Margin="15,11,15,26" Grid.RowSpan="2"/>
            <Label Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Content="people:" Width="102" Grid.Row="5" FontSize="14" Grid.RowSpan="2" />

            <Button x:Name="searchButton" Grid.Column="7" Grid.Row="5" Margin="0,4,0,26" Grid.RowSpan="2" Click="SearchButton_Click">
                <Image Source="../../Resources/Images/search.png" Height="30" Width="25"/>
            </Button>

            <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="8">
                <DataGrid ItemsSource="{Binding Tours}"
                          SelectedItem="{Binding Path=SelectedTour}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          AutoGenerateColumns="False" Height="465" HeadersVisibility="Column" FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="200"/>
                        <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="200"/>
                        <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
