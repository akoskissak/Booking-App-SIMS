<Window x:Class="BookingApp.View.TouristWindows.TouristWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.TouristWindows" xmlns:dto="clr-namespace:BookingApp.DTO" d:DataContext="{d:DesignInstance Type=dto:TourDTO}"
        mc:Ignorable="d"
        Title="TouristWindow" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="41"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1" 
                   Grid.Row="5" 
                   Grid.RowSpan="2" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Content="Tours:" Width="50" 
                   FontWeight="Bold" 
                   FontSize="14" />

            <GroupBox Grid.Row="0" 
                      Grid.Column="4" 
                      Grid.ColumnSpan="4" 
                      Grid.RowSpan="7" 
                      Margin="0,0,29,16">
                <GroupBox.Header>
                    <Label>Search</Label>
                </GroupBox.Header>

            </GroupBox>

            <Label Grid.Column="5" 
                   HorizontalAlignment="Center" 
                   Content="Country:" 
                   Width="102" 
                   Grid.Row="1" 
                   FontSize="14"/>
            <TextBox x:Name="CountrySearch" 
                     Grid.Column="6" 
                     Width="150" 
                     Height="22" 
                     Grid.Row="1" 
                     Margin="15,4,15,4"/>

            <Label Grid.Column="5" 
                   HorizontalAlignment="Center" 
                   Content="City:" 
                   Width="102" 
                   Grid.Row="2" 
                   FontSize="14" />
            <TextBox x:Name="CitySearch"
                     Grid.Column="6" 
                     Grid.Row="2" 
                     Width="150" 
                     Height="22" 
                     Margin="15,4,15,4"/>

            <Label Grid.Column="5" 
                   HorizontalAlignment="Center" 
                   Content="Duration:" 
                   Width="102" 
                   Grid.Row="3" 
                   FontSize="14" />
            <TextBox x:Name="DurationSearch"
                     PreviewTextInput="DurationSearch_PreviewTextInput"
                     LostFocus="DurationSearch_LostFocus"
                     TextAlignment="Justify"
                     Grid.Column="6" 
                     Grid.Row="3" 
                     Height="22" 
                     Margin="15,4,131,4"/>
            <Label Grid.Column="6" 
                   HorizontalAlignment="Left" 
                   Content="h" Width="30" 
                   Grid.Row="2" 
                   FontSize="14" 
                   FontWeight="Bold" Margin="54,29,0,1" Grid.RowSpan="2" />

            <Label Grid.Column="5" 
                   HorizontalAlignment="Center" 
                   Content="Language:" 
                   Width="102" 
                   Grid.Row="4" 
                   FontSize="14" />
            <TextBox x:Name="LanguageSearch" 
                     Grid.Column="6" 
                     Grid.Row="4"
                     TextAlignment="Justify"
                     Height="22" 
                     Margin="15,4,131,4"/>

            <Label Grid.Column="5" 
                   HorizontalAlignment="Center" 
                   Content="Number of" 
                   Width="102" Grid.Row="5" 
                   FontSize="14" 
                   Grid.RowSpan="2" />
            <TextBox x:Name="PeopleSearch" 
                     PreviewTextInput="PeopleSearch_PreviewTextInput"
                     LostFocus="PeopleSearch_LostFocus"
                     TextAlignment="Justify"
                     Grid.Column="6" 
                     Grid.Row="5" 
                     Height="22" 
                     Margin="15,12,131,26" 
                     Grid.RowSpan="2"/>
            <Label Grid.Column="5" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Content="people:" 
                   Width="102" 
                   Grid.Row="5" 
                   FontSize="14" 
                   Grid.RowSpan="2" />

            <Button x:Name="searchButton" 
                    Grid.Column="6" 
                    Grid.Row="5" 
                    Margin="120,3,15,27" 
                    Grid.RowSpan="2" 
                    Click="SearchButton_Click" 
                    FontWeight="Bold">
                <!--"<Image Source="../../Resources/Images/search.png"/>-->
                Search
            </Button>

            <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="8">
                <DataGrid ItemsSource="{Binding Tours}"
                          SelectedItem="{Binding Path=SelectedTour}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          AutoGenerateColumns="False" Height="465" HeadersVisibility="Column" FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="200"/>
                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="200"/>
                        <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="150"/>
                        <DataGridTemplateColumn Header="Book">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Book a tour" Click="BookButton_Click" Width="100" Margin="1, 5, 1, 5" Height="22"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
